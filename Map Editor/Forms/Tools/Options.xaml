<Window x:Class="Map_Editor.Forms.Tools.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Options" Height="521" Width="810" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Offset="0.0" Color="#212e43" />
            <GradientStop Offset="0.1" Color="#3d5379" />
            <GradientStop Offset="0.5" Color="#42597f" />
            <GradientStop Offset="0.9" Color="#3d5379" />
            <GradientStop Offset="1.0" Color="#32425f" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280*" />
            <ColumnDefinition Width="508*" />
        </Grid.ColumnDefinitions>
        <Expander Header="Categories" IsExpanded="True" Margin="10">
            <Grid Background="White">
                <TreeView Name="CategoryTree" />
            </Grid>
        </Expander>
        <Expander Header="Settings" Name="SettingsExpander" IsExpanded="True" Margin="0,10,10,10" Grid.Column="1">
            <Grid Background="White" />
        </Expander>
    </Grid>
</Window>
